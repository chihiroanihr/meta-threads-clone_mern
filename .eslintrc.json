{
  "extends": [
    "next/core-web-vitals",
    "prettier",
    "plugin:tailwindcss/recommended"
  ],
  "plugins": ["sort-keys-custom-order", "unused-imports", "tailwindcss"],
  "rules": {
    // For unused imports
    "unused-imports/no-unused-imports": ["error", { "severity": "warn" }]
  },
  "settings": {
    // For tailwindcss auto-formatting
    "tailwindcss": {
      "groupByResponsive": true,
      "whitelist": []
    }
  }
}
