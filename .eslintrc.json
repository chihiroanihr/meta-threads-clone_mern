{
  "extends": [
    "next/core-web-vitals",
    "prettier",
    "plugin:tailwindcss/recommended"
  ],
  "plugins": ["unused-imports", "tailwindcss"],
  "rules": {
    // For unused imports
    "unused-imports/no-unused-imports": "warn"
  },
  "settings": {
    // For tailwindcss auto-formatting
    "tailwindcss": {
      "groupByResponsive": true,
      "whitelist": []
    }
  }
}
